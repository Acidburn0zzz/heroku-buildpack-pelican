daemon off;
worker_processes 4;

events {
  use epoll;
  worker_connections 1024;
}

http {
  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;

  gzip_static on;

  include mime.types;

  server {
    listen <%= ENV["PORT"] %>;
    port_in_redirect off;
    root /app/public;

    location / {
      expires 10s;
    }
  }
}

